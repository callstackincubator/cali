{
  "name": "@cali/root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "bun run build:tools && bun run build:mcp-server && bun run build:cli",
    "build:tools": "bun build ./packages/tools/src/index.ts --outdir ./packages/tools/dist --target node --packages external",
    "build:mcp-server": "bun build ./packages/mcp-server/src/index.ts --outdir ./packages/mcp-server/dist --target node",
    "build:tools-types": "tsc --emitDeclarationOnly --outDir ./packages/tools/dist --project",
    "build:cli": "bun build ./packages/cali/src/cli.ts --outdir ./packages/cali/dist --target node",
    "release": "release-it"
  },
  "devDependencies": {
    "@release-it-plugins/workspaces": "^4.2.0",
    "@release-it/conventional-changelog": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "bun-types": "^1.1.33",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "prettier": "^3.2.5",
    "release-it": "^17.10.0",
    "typescript": "^5.1.3",
    "vitest": "^2.1.1"
  },
  "patchedDependencies": {
    "ai@4.0.3": "patches/ai@4.0.3.patch"
  },
  "license": "MIT",
  "version": "0.1.0"
}
